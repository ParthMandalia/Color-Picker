<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:local="using:Porrey.Controls.ColorPicker">

	<Style TargetType="local:IndicatorArrow"
		   xmlns:local2="using:Porrey.Controls.ColorPicker">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:IndicatorArrow">
					<Canvas>
						<Polygon Name="PART_Triangle"
								 Stroke="{TemplateBinding BorderBrush}"
								 StrokeThickness="{TemplateBinding BorderThickness}"
								 Fill="{TemplateBinding Background}"
								 VerticalAlignment="Top"
								 HorizontalAlignment="Center"
								 RenderTransformOrigin="0.5, 0.5">
						</Polygon>
					</Canvas>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
