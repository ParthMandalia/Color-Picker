<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


	<Color x:Key="TitleBarForegroundColor">White</Color>
	<Color x:Key="TitleBarBackgroundColor">Black</Color>
	<Color x:Key="TitleBarButtonBackgroundColor">Black</Color>
	<Color x:Key="TitleBarButtonHoverBackgroundColor">#353535</Color>
	<Color x:Key="TitleBarButtonPressedBackgroundColor">#454545</Color>
	<Color x:Key="TitleBarInactiveBackgroundColor">Black</Color>
	<Color x:Key="TitleBarInactiveForegroundColor">LightGray</Color>
	<Color x:Key="TitleBarButtonInactiveBackgroundColor">Black</Color>

	<Color x:Key="ApplicationBorderColor">#353535</Color>
	
	<SolidColorBrush x:Key="ApplicationBorderBrush"
					 Color="{StaticResource ApplicationBorderColor}" />
</ResourceDictionary>
